<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/transparent50">
    <item>
        <selector >
            <item android:state_enabled="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                        android:shape="rectangle">
                    <solid android:color="@color/positiveLight"/>
                    <stroke android:color="@color/positiveMedium" android:width="1dp"/>
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                        android:shape="rectangle">
                    <solid android:color="@color/silverVeryDark"/>
                    <stroke android:color="@color/silverDark" android:width="1dp"/>
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </selector>
    </item>

</ripple>

