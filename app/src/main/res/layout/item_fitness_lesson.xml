<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryBgColor3">


    <ImageView
        android:id="@+id/fitnessLesson_promoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.25"
        android:scaleType="centerCrop"
        android:src="@drawable/fitnesslesson_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/diagonal_shadow"
        app:layout_constraintBottom_toBottomOf="@id/fitnessLesson_promoImage"
        app:layout_constraintEnd_toEndOf="@id/fitnessLesson_promoImage"
        app:layout_constraintStart_toStartOf="@id/fitnessLesson_promoImage"
        app:layout_constraintTop_toTopOf="@id/fitnessLesson_promoImage" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/transparent95"
        app:layout_constraintBottom_toBottomOf="@id/fitnessLesson_promoImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/medium_margin"
        android:src="@drawable/shadow"
        android:alpha="0.5"
        android:tint="@color/primaryBgColor2"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fitnessLesson_name"
            style="@style/FontH3_BOLD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primaryVeryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CrossFit" />

        <TextView
            android:id="@+id/fitnessLesson_date"
            style="@style/FontH4_MEDIUM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/fitnessLesson_name"
            app:layout_constraintTop_toBottomOf="@id/fitnessLesson_name"
            tools:text="12/03/2019 13:49" />

        <ImageView
            android:id="@+id/moveToDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_arrowright"
            android:layout_margin="@dimen/small_margin"
            android:padding="2dp"
            android:tint="@color/primaryLight"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>